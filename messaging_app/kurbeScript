#!/bin/bash

echo "Starting Minikube cluster..."

minikube start --driver=docker --memory=2048mb

if [ $? -ne 0 ]; then
    echo "ERROR: Minikube failed to start. Please check the error messages above."
    exit 1
fi

echo "Minikube cluster started successfully."

echo "Verifying cluster information..."
kubectl cluster-info

echo "Retrieving available pods (should show core system pods):"
kubectl get pods -A 